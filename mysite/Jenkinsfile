pipeline {
    agent any

    stages {
        stage('Checkout branch') {
            steps {
                git branch: 'main', credentialsId: 'github', url: 'https://github.com/sp-a-in/test.git'
            }
        }
        stage('Build the image') {
            steps {
                sh "ls"
                sh "docker build -t myimage ./mysite/"
                sh "docker images"
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}